@using EntityLayer.Concreate
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
*@
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div style="padding-top:20px">
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td><a href="~/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                <td><a href="~/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="#" class="btn btn-primary">Başlklar</a></td>
                

            </tr>
        }
    </table>
    <br />
    <a href="~/AdminCategory/AddCategory" class="btn btn-success"> Kategori Ekle</a>
</div>

